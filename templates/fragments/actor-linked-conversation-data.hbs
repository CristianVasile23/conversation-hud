<div class="form-group very-slim">
  <label>{{localize 'CHUD.strings.excludeFromBeingPulled.name'}}</label>
  <div class="form-fields">
    <input
      type="checkbox"
      name="flags.conversation-hud.excludeFromBeingPulled"
      {{checked excludeFromBeingPulled}}
    >
  </div>
  <p class="hint">{{localize 'CHUD.strings.excludeFromBeingPulled.hint'}}</p>
</div>

<div class="form-group">
  <label>{{localize 'CHUD.strings.linkedConversation.name'}}</label>
  <div class="form-fields">
    <select name="flags.conversation-hud.linkedConversation">
      {{selectOptions conversations selected=linkedConversation blank="" valueAttr="id" labelAttr="name"}}
    </select>

    <button
      type="button"
      class="capture-position"
      id="activate-conversation"
      title="{{localize 'CHUD.actions.activateConversation'}}"
      onclick="game.ConversationHud.startConversationFromJournalId('{{linkedConversation}}')"
      {{#unless linkedConversation}}disabled{{/unless}}
    >
      <i class="fas fa-eye fa-fw"></i>
    </button>
  </div>
  <p class="hint">{{localize 'CHUD.strings.linkedConversation.hint'}}</p>
</div>