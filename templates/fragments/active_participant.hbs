<div class="active-participant-wrapper">
  {{!-- Faction wrapper --}}
  <div class="active-participant-faction {{#unless participant.faction.displayFaction}}faction-disabled{{/unless}}">
    {{> "modules/conversation-hud/templates/fragments/faction_wrapper.hbs" faction=participant.faction}}
    <p class="faction-name">{{participant.faction.factionName}}</p>
  </div>

  {{!-- Participant display --}}
  <div class="active-participant {{portraitStyle}}">
    {{#if displayParticipant}}
      <img id="conversationActiveParticipant" class="portrait {{portraitAnchor}}" src="{{participant.img}}" alt="Portrait" />
      <p id="conversationActiveParticipantName" class="name {{activeParticipantFontSize}}">
        {{participant.name}}
      </p>
    {{else}}
      <p id="conversationNoActiveParticipantMsg" class="no-participant-text">
        {{localize 'CHUD.noActiveParticipant'}}
      </p>
    {{/if}}
  </div>
</div>