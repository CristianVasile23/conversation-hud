<div class="form-group">
  <label>{{localize "CHUD.strings.participantName.name"}}</label>
  <div class="form-fields">
    <input class="text" type="text" name="participantName" placeholder="{{localize 'CHUD.strings.newParticipant'}}" value="{{participantName}}" />
  </div>
  <p class="notes">{{localize "CHUD.strings.participantName.hint"}}</p>
</div>

<div class="form-group">
  <label>{{localize "CHUD.strings.displayName.name"}}</label>
  <div class="form-fields">
    <input
      type="checkbox"
      name="displayParticipantName"
      {{checked displayParticipantName}}
    >
  </div>
  <p class="notes">{{localize "CHUD.strings.displayName.hint"}}</p>
</div>

<hr>

<div class="form-group">
  <label>{{localize "CHUD.strings.portrait.name"}}</label>
  <div class="form-fields">
    <button type="button" class="file-picker" data-type="imagevideo" data-target="participantImg" title="{{localize 'CHUD.strings.browseFiles'}}">
      <i class="fas fa-file-import fa-fw"></i>
    </button>
    <input class="image" type="text" name="participantImg" placeholder="{{localize 'CHUD.strings.filePath'}}" value="{{participantImg}}" />
  </div>
  <p class="notes">{{localize "CHUD.strings.portrait.hint"}}</p>
</div>

<div class="form-group">
  <label>{{localize "CHUD.strings.portraitScale.name"}}</label>
  <div class="form-fields">
    <input
      type="range"
      name="participantImgScale"
      data-dtype="Number"
      value="{{participantImgScale}}"
      min="0.1"
      max="2"
      step="0.1"
    />
    <span class="range-value">{{participantImgScale}}</span>
  </div>
  <p class="notes">{{localize "CHUD.strings.portraitScale.hint"}}</p>
</div>

<div class="form-group">
  <label>{{localize "CHUD.strings.portraitAnchor.vertical.name"}}</label>
  <select name="portraitAnchorVertical">
    {{ selectOptions anchorOptions.vertical selected=portraitAnchor.vertical nameAttr="value" labelAttr="label"}}
  </select>
  <p class="notes">{{localize "CHUD.strings.portraitAnchor.vertical.hint"}}</p>
</div>

<div class="form-group">
  <label>{{localize "CHUD.strings.portraitAnchor.horizontal.name"}}</label>
  <select name="portraitAnchorHorizontal">
    {{ selectOptions anchorOptions.horizontal selected=portraitAnchor.horizontal nameAttr="value" labelAttr="label"}}
  </select>
  <p class="notes">{{localize "CHUD.strings.portraitAnchor.horizontal.hint"}}</p>
</div>

<hr>

<div class="form-group">
  <label>{{localize "CHUD.strings.linkedJournal.name"}}</label>
  <select name="linkedJournal">
    {{ selectOptions journals selected=linkedJournal blank="" nameAttr="id" labelAttr="name"}}
  </select>
  <p class="notes">{{localize "CHUD.strings.linkedJournal.hint"}}</p>
</div>

<div class="form-group">
  <label>{{localize "CHUD.strings.linkedActor.name"}}</label>
  <select name="linkedActor">
    {{ selectOptions actors selected=linkedActor blank="" nameAttr="id" labelAttr="name"}}
  </select>
  <p class="notes">{{localize "CHUD.strings.linkedActor.hint"}}</p>
</div>