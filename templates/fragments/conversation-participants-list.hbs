<div class="chud-conversation-participants-list">
  {{#if participants}}
    <div class="chud-header">
      <p class="chud-active-by-default">{{localize 'CHUD.strings.active'}}</p>
      <p class="chud-faction">{{localize 'CHUD.strings.banner'}}</p>
      <p class="chud-details">{{localize 'CHUD.strings.details'}}</p>
      <p class="chud-controls">{{localize 'CHUD.strings.actions'}}</p>
    </div>

    <div id="conversationParticipantsList" class="chud-content">
      {{#each participants as |participant index|}}
        <div class="participant-drag-drop-container">
          <div id="drag-drop-indicator-top" class="drag-drop-indicator"></div>

          <div class="chud-participant">
            {{#if ../isGM}}
              <i
                id="conversation-sheet-drag-drop-handler"
                class="chud-drag-drop-handler fa-solid fa-arrows-up-down-left-right"
                draggable="true"
              ></i>

              <input
                id="participant-active-by-default-checkbox"
                class="chud-checkbox"
                type="checkbox"
                {{#if (eq index ../defaultActiveParticipant)}}checked="checked"{{/if}}
              />
            {{/if}}

            {{> "modules/conversation-hud/templates/fragments/faction-banner.hbs"
              faction=participant.faction
            }}

            <div class="chud-portrait-wrapper">
              {{{renderParticipantPortrait
                participant.img
                null
              }}}
            </div>

            <div class="chud-text-wrapper">
              <p class="chud-name">
                {{#if (eq participant.displayName false)}}
                  {{localize 'CHUD.strings.unknown'}}
                {{else}}
                  {{participant.name}}
                {{/if}}
              </p>

              {{#if participant.faction.displayFaction}}
                <p class="chud-faction">{{participant.faction.factionName}}</p>
              {{else}}
                <p class="chud-faction">{{localize 'CHUD.faction.unaffiliated'}}</p>
              {{/if}}

              {{{renderParticipantLinkedObjects participant.linkedJournal participant.linkedActor}}}
            </div>
            
            {{#if ../isGM}}
              <div class="chud-participant-action-buttons">
                <a id="participant-clone-button" class="chud-clone" title="{{localize 'CHUD.actions.participant.clone'}}">
                  <i class="fas fa-clone"></i>
                </a>
                <a id="participant-edit-button" class="chud-edit" title="{{localize 'CHUD.actions.participant.edit'}}">
                  <i class="fas fa-pencil"></i>
                </a>
                <a id="participant-delete-button" class="chud-delete" title="{{localize 'CHUD.actions.participant.delete'}}">
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            {{/if}}
          </div>

          <div id="drag-drop-indicator-bottom" class="drag-drop-indicator"></div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="chud-no-participants-message">
      {{#if customNoDataMessage}}
        {{customNoDataMessage}}
      {{else}}
        {{localize 'CHUD.strings.noParticipantsInList'}}
      {{/if}}
    </p> 
  {{/if}}
</div>