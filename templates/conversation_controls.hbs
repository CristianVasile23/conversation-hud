{{#if isGM}}
  <div
    class="control-button margin-bottom"
    onclick="game.ConversationHud.closeActiveConversation()"
    data-tooltip="{{localize 'CHUD.actions.closeConversation'}}"
  >
    <i class="fas fa-times"></i>
  </div>
{{/if}}

{{#if features.minimizeEnabled}}
  {{#if (or isVisible isGM)}}
    {{{renderMinimizeButton isGM isMinimized isMinimizationLocked}}}
  {{/if}}

  {{#if isGM}}
    <div
      class="control-button toggle {{#if isMinimizationLocked}}active{{/if}} margin-bottom {{#unless isVisible}}disabled{{/unless}}"
      onClick='game.ConversationHud.executeFunction({{{json (object scope="local" type="toggle-lock-minimization" data=(object))}}})'
      data-tooltip="{{localize 'CHUD.actions.lockMinimization'}}"
    >
      <i class="fas fa-lock"></i>
    </div>
  {{/if}}
{{/if}}

{{#if isGM}}
  <div
    class="control-button toggle {{#if isVisible}}active{{/if}}"
    onclick="game.ConversationHud.toggleConversationVisibility()"
    data-tooltip="{{localize 'CHUD.actions.toggleVisibility'}}"
  >
    <i class="fas fa-eye"></i>
  </div>

  {{#if features.speakAsEnabled}}
    <div
      class="control-button toggle {{#if isSpeakingAs}}active{{/if}}"
      onClick='game.ConversationHud.executeFunction({{{json (object scope="local" type="toggle-speaking-as" data=(object))}}})'
      data-tooltip="{{localize 'CHUD.actions.toggleSpeakAs'}}"
    >
      <i class="fas fa-comment-quote"></i>
    </div>
  {{/if}}

  <div
    class="control-button toggle {{#if isBackgroundVisible}}active{{/if}}"
    onclick='game.ConversationHud.executeFunction({{{json (object scope="local" type="toggle-background" data=(object))}}})'
    data-tooltip="{{localize 'CHUD.actions.toggleBackgroundBlur'}}"
  >
    <i class="fas fa-smoke"></i>
  </div>

  <div
    class="control-button"
    onclick='game.ConversationHud.executeFunction({{{json (object scope="local" type="change-background" data=(object))}}})'
    data-tooltip="{{localize 'CHUD.actions.changeConversationBackground'}}"
  >
    <i class="fas fa-image"></i>
  </div>

  <div
    class="control-button"
    onclick='game.ConversationHud.executeFunction({{{json (object scope="local" type="pull-participants-from-scene" data=(object))}}})'
    data-tooltip="{{localize 'CHUD.actions.pullParticipants'}}"
  >
    <i class="fas fa-up-from-bracket"></i>
  </div>

  <div
    class="control-button margin-top"
    onclick="game.ConversationHud.saveActiveConversation()"
    data-tooltip="{{localize 'CHUD.actions.saveConversation'}}"
  >
    <i class="fas fa-save"></i>
  </div>
{{/if}}